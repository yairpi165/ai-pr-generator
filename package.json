{
  "name": "ai-pr-generator-node",
  "version": "1.0.0",
  "description": "Generate beautiful, structured pull request descriptions using Gemini AI",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "genpr": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc -w",
    "dev:watch": "yarn build --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint ./src",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "tsc": "tsc --noEmit",
    "check": "yarn lint && yarn format:check && yarn tsc",
    "fix": "yarn lint:fix && yarn format",
    "prepare": "husky",
    "postinstall": "husky"
  },
  "keywords": [
    "ai",
    "pr",
    "pull-request",
    "gemini",
    "git",
    "cli"
  ],
  "author": "Yair Pinchasi",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chalk": "^5.3.0",
    "clipboardy": "^3.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.2.15",
    "open": "^10.0.2",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "@types/clipboardy": "^2.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-watch-typeahead": "^3.0.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
