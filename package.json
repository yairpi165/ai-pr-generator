{
  "name": "ai-pr-generator",
  "version": "1.0.0",
  "description": "Generate beautiful, structured pull request descriptions using AI",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "genpr": "./dist/cli.js"
  },
  "preferGlobal": true,
  "scripts": {
    "build": "tsc",
    "verify-build": "node scripts/verify-build.js",
    "start": "node dist/cli.js",
    "dev": "tsc -w",
    "dev:watch": "npm run build --watch",
    "test": "jest --silent",
    "test:watch": "jest --watch --silent",
    "test:coverage": "jest --coverage --silent",
    "test:verbose": "jest --verbose --silent",
    "lint": "eslint ./src",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "tsc": "tsc --noEmit",
    "check": "npm run lint && npm run format:check && npm run tsc",
    "fix": "npm run lint:fix && npm run format",
    "prepare": "husky",
    "prepublishOnly": "npm run test && npm run build && node scripts/verify-build.js",
    "pack": "npm pack --dry-run"
  },
  "keywords": [
    "ai",
    "pr",
    "pull-request",
    "gemini",
    "openai",
    "git",
    "cli",
    "code-review",
    "automation",
    "typescript",
    "node"
  ],
  "author": "Yair Pinchasi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yairpi165/ai-pr-generator"
  },
  "bugs": {
    "url": "https://github.com/yairpi165/ai-pr-generator/issues"
  },
  "homepage": "https://github.com/yairpi165/ai-pr-generator#readme",
  "files": [
    "dist",
    "reviewers.json.example"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "chalk": "^5.3.0",
    "clipboardy": "^3.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^9.2.15",
    "open": "^10.0.2",
    "openai": "^4.104.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/clipboardy": "^2.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-watch-typeahead": "^3.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-jest-mock-import-meta": "^1.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
